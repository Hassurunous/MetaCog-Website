<div class="container">
    <%= form_for(@post) do |f| %>
        <!-- <div class="row">
            <h3><%= f.label :title %></h3>
        </div> -->
        <div class="row">
            <%= f.text_field :title, class: "col-sm-10 title-input", maxlength:200, placeholder: 'Title (max-length: 200 characters)' %>
        </div>
        <div class="clearfix"></div>
        <!-- <div class="row">
            <h4><%= f.label :body %></h4>
        </div> -->
        <div class="row">
            <%= f.text_area :body, class:"col-sm-10 body-input", placeholder: 'Post Body (No max characters)'%>
            <div class="clearfix"></div>
        </div>
        <div class="row">
            <div class="col-sm-10 submit-btn">
                <%= f.submit "Submit Post", class:"btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>
